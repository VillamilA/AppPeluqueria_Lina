# Peluquería Lina - Variables de Entorno
# Copia este archivo como .env y completa con tus valores reales

# ========================================
# API Configuration
# ========================================

# URL base de la API
API_BASE_URL=http://your-api-url.com

# Versión de API
API_VERSION=v1

# Timeout para requests (en segundos)
API_TIMEOUT=30

# ========================================
# Authentication
# ========================================

# Key para JWT Token storage
JWT_TOKEN_KEY=peluqueria_lina_jwt_token

# Tiempo de expiración del token (en minutos)
TOKEN_EXPIRATION_TIME=1440

# ========================================
# Firebase / Notifications (Opcional)
# ========================================

# Firebase Project ID
FIREBASE_PROJECT_ID=your-project-id

# Firebase API Key
FIREBASE_API_KEY=your-firebase-api-key

# Firebase App ID
FIREBASE_APP_ID=your-firebase-app-id

# ========================================
# Email Configuration
# ========================================

# Email de soporte
SUPPORT_EMAIL=soporte@peluquerialina.com

# Email para notificaciones
NOTIFICATION_EMAIL=notificaciones@peluquerialina.com

# ========================================
# App Configuration
# ========================================

# Nombre de la aplicación
APP_NAME=Peluquería Lina

# Versión de la aplicación
APP_VERSION=1.0.0

# Ambiente (development, staging, production)
ENVIRONMENT=development

# ========================================
# Logging
# ========================================

# Nivel de logs (debug, info, warning, error)
LOG_LEVEL=debug

# Habilitar logs en consola
ENABLE_CONSOLE_LOGS=true

# ========================================
# Maps / Geolocation
# ========================================

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Ubicación por defecto (latitude,longitude)
DEFAULT_LOCATION=40.7128,-74.0060

# ========================================
# Features Flags
# ========================================

# Habilitar modo demo
DEMO_MODE=false

# Habilitar debug mode
DEBUG_MODE=false

# Habilitar notificaciones push
ENABLE_PUSH_NOTIFICATIONS=true

# ========================================
# Rate Limiting
# ========================================

# Tiempo de espera para reenviar código (en segundos)
FORGOT_PASSWORD_COOLDOWN=90

# Máximo de intentos de login fallidos
MAX_LOGIN_ATTEMPTS=5

# Tiempo de bloqueo después de intentos fallidos (en minutos)
LOCKOUT_TIME=15

# ========================================
# Validation Rules
# ========================================

# Longitud mínima de contraseña
MIN_PASSWORD_LENGTH=6

# Longitud máxima de nombre de servicio
MAX_SERVICE_NAME_LENGTH=30

# Longitud máxima de código de servicio
MAX_SERVICE_CODE_LENGTH=7

# Duración mínima de servicio (en minutos)
MIN_SERVICE_DURATION=5

# Duración máxima de servicio (en minutos)
MAX_SERVICE_DURATION=480

# ========================================
# Database (Si aplica)
# ========================================

# URL de conexión a base de datos
DATABASE_URL=your-database-url

# Pool de conexiones
DATABASE_POOL_SIZE=10

# ========================================
# Cache Configuration
# ========================================

# Tiempo de caché para servicios (en minutos)
SERVICE_CACHE_TIME=30

# Tiempo de caché para estilistas (en minutos)
STYLISTS_CACHE_TIME=30

# Tiempo de caché para disponibilidad (en minutos)
AVAILABILITY_CACHE_TIME=15

# ========================================
# Security
# ========================================

# Salt para encriptación
ENCRYPTION_SALT=your-secret-salt

# Habilitar validación SSL
VALIDATE_SSL=true

# ========================================
# Reporting / Analytics (Opcional)
# ========================================

# Sentry DSN para error tracking
SENTRY_DSN=https://your-sentry-dsn

# Google Analytics ID
GOOGLE_ANALYTICS_ID=your-analytics-id

# ========================================
# Otros
# ========================================

# Zona horaria por defecto
DEFAULT_TIMEZONE=America/Bogota

# Moneda por defecto
DEFAULT_CURRENCY=COP

# Idioma por defecto
DEFAULT_LANGUAGE=es
