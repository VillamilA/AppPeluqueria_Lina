# Peluquería Lina - Configuración de Entorno
# Copia este archivo como .env en la raíz del proyecto y completa con tus valores

# API Backend
API_BASE_URL=https://tu-api-peluqueria.com
API_VERSION=v1

# Autenticación
JWT_TOKEN_KEY=peluqueria_lina_jwt
TOKEN_EXPIRATION_TIME=1440

# Aplicación
APP_NAME=Peluquería Lina
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG_MODE=false

# Email
SUPPORT_EMAIL=info@peluquerialina.com

# Ubicación
DEFAULT_LOCATION=4.7110,-74.0066
DEFAULT_TIMEZONE=America/Bogota

# Moneda
DEFAULT_CURRENCY=COP

# Validaciones
MIN_PASSWORD_LENGTH=6
MAX_SERVICE_NAME_LENGTH=30
MAX_SERVICE_CODE_LENGTH=7
MIN_SERVICE_DURATION=5
MAX_SERVICE_DURATION=480

# Rate Limiting
FORGOT_PASSWORD_COOLDOWN=90
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=15

# Logs
LOG_LEVEL=debug
ENABLE_CONSOLE_LOGS=true

# Maps
GOOGLE_MAPS_API_KEY=tu-google-maps-api-key

# Idioma
DEFAULT_LANGUAGE=es
